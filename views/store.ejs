<!DOCTYPE html>
<html>
    <head>
        <title>Danny | Store</title>
        <meta name="Danny page" content="This is Danny's webpage">
        <link rel="stylesheet" href="style/danny_style.css">
        <script src="https://checkout.stripe.com/checkout.js" defer></script>
        <script>
            var stripePublicKey = '<%= stripePublicKey %>'
        </script>
        <script src="javascript/danny_interactive.js" defer></script>
    </head>
    
    <body>
        <header class="main-header">
            <nav class="nav main-nav">
                <ul>
                    <li><a href="index.html">HOME</a></li>
                    <li><a href="/store">STORE</a></li>
                    <li><a href="danny.html">ABOUT</a></li>
                </ul>
            </nav>
            <h1 class="danny-name danny-name-large">Danny</h1>
        </header>

        <section class="container content-section">
            <h2 class="section-header">MUSIC</h2>
            <div class="shop-items">
                <% items.music.forEach(function(item){ %>
                    <div class="shop-item" data-item-id="<%= item.id %>">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img src="images/album_covers/<%= item.imgName %>" class="shop-item-image">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-btn" role="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="container content-section">
            <h2 class="section-header">MERCH</h2>
            <div class="shop-items">
                <% items.merch.forEach(function(item){ %>
                    <div class="shop-item" data-item-id="<%= item.id %>">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img src="images/merch/<%= item.imgName %>" class="shop-item-image">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-btn" role="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items"></div>
            <div class="cart-total">
                <span class="cart-total-title">Total</span>
                <span class="cart-total-price">$0</span>
            </div>
            <button class="btn btn-primary btn-purchase" role="button">PURCHASE</button>
        </section>

        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="danny-name">Danny</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com/" target="_blank">
                            <img src="images/logos/youtube_white.png"/>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.spotify.com/" target="_blank">
                            <img src="images/logos/spotify_white.ico"/>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/" target="_blank">
                            <img src="images/logos/facebook_white.png"/>
                        </a>
                    </li>
                </ul>

            </div>
        </footer>
    </body>
</html>
